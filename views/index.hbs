<div class="row mt-5">
  <div class="col-md-5 m-auto">
    <div class="card-body">
      <div class="row mb-3">
        <div class="col">
          {{!-- 分類篩選 --}}
          <form action="/category" class="inline-block">
            <select onchange="form.submit()" class="form-select" name="category" id="category" aria-label=" category">
              <option value="">全部</option>
              {{#each categories}}
              <option value="{{this._id}}" {{this.selected}}>{{this.name}}</option>
              {{/each}}
            </select>
        </div>
      </div>
      <p class="fw-bold fs-5">總金額：</p>
      <p class="text-center fs-1" style="color:orangered">{{totalAmount}}</p>
      <table>
        {{#each records}}
        <tr>
          <td width="10%"><i class="{{this.category_id.icon}} fa-2x ps-4" style="color: #61CECD "></i></td>
          <td>{{this.name}}<br>{{this.date}}</td>
          <td class="ps-5 pe-2">{{this.amount}}</td>
          <td bgcolor=" white" class="ps-5">
            <a href="./records/{{this._id}}/edit" class=""><i class="fa-solid fa-pen" style="color:brown"></i></a>
          </td>
          <td>
          <td bgcolor="white" class="ps-1">
            <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-outline button-delete" onclick="return confirm('是否確定要刪除?')"><i
                  class="fa-solid fa-trash-can"></i></button>
            </form>
          </td>
        </tr>
        {{/each}}
      </table>
    </div>
    <div class="d-grid gap-2 col-6 mx-auto">
      <a href="./records/new" class="btn button3">新增支出</a>
    </div>
  </div>
</div>