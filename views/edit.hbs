<form action="/records/{{record._id}}?_method=PUT" method="POST">
  <div class="row mt-5">
    <div class="col-md-5 m-auto">
      <div class="card-body">
        <p style="color:red">*必填欄位</p>
        <p class="text-center h2 mb-5">請修改你的支出</p>
        <div class="row align-items-center mb-5 h3">
          <label for="name" class="col-auto required">名稱</label>：
          <div class="col-6">
            <input type="text" placeholder="name" name="name" id="name" class="form-control" value="{{record.name}}"
              required>
          </div>
        </div>
        <div class="row align-items-center mb-5 h3">
          <label for="date" class="col-auto required">日期</label>：
          <div class="col-6">
            <input type="date" name="date" id="date" class="form-control" value="{{record.date}}" required>
          </div>
        </div>
        <div class="row align-items-center mb-5 h3">
          <label for="category" class="col-auto required ">類別</label>：
          <div class="col-6">
            <select class="form-select " name="category" id="category" aria-label="category">
              {{#each categories}}
              <option value="{{this.name}}" {{this.selected}}>{{this.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="row align-items-center mb-5 h3">
          <label for="amount" class="col-auto required">金額</label>：
          <div class="col-6">
            <input type="number" min="1" name="amount" id="amount" class="form-control" value="{{record.amount}}"
              required>
          </div>
        </div>
        <div class="col-6 mx-auto">
          <button type="submit" class="btn button1">送出</button>
          <a href="/" class="btn button1">返回</a>
        </div>
      </div>
    </div>
  </div>
</form>